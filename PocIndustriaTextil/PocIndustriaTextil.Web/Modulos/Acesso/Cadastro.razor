        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Please enter your details</h5>
                <EditForm Model="@VM" OnValidSubmit="@VM.OnCadastro">
                    <DataAnnotationsValidator />
                    <ValidationSummary />


                    <div class="form-group">
                        <label for="nome">Nome</label>
                        <InputText Id="nome" class="form-control" @bind-Value="VM.Usuario.Nome" />
                        <ValidationMessage For="@(() => VM.Usuario.Nome)" />
                    </div>

                    <div class="form-group">
                        <label for="sobrenome">Sobrenome</label>
                        <InputText Id="sobrenome" class="form-control" @bind-Value="VM.Usuario.Sobrenome" />
                        <ValidationMessage For="@(() => VM.Usuario.Sobrenome)" />
                    </div>

                    <div class="form-group">
                        <label for="email">Email address</label>
                        <InputText Id="email" class="form-control" @bind-Value="VM.Usuario.Login" />
                        <ValidationMessage For="@(() => VM.Usuario.Login)" />
                    </div>


                    <div class="form-group">
                        <label for="password">Password</label>
                        <InputText Id="password" type="password" class="form-control" @bind-Value="VM.Usuario.Senha" />
                        <ValidationMessage For="@(() => VM.Usuario.Senha)" />
                    </div>

                    <div class="form-group">
                        <label for="password">Confirm Password</label>
                        <InputText Id="password" type="password" class="form-control" @bind-Value="VM.Usuario.ConfirmarSenha" />
                        <ValidationMessage For="@(() => VM.Usuario.ConfirmarSenha)" />
                    </div>

                    <button type="submit" class="btn btn-primary">Salvar</button>
                </EditForm>
            </div>
        </div>

