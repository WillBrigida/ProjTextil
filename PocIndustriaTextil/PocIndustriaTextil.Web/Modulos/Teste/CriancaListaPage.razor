@page "/criancas"

@if (VM.IsBusy)
{
    <app>
        <div id="message" style="position:absolute; top:10vh; width:100%; text-align:center">
            <p>carregando. . .</p>
            <div class="spinner-border text-secondary" style="width: 3rem; height: 3rem;" role="status">
                <span class="sr-only">Loading...</span>
            </div>
        </div>
    </app>
}
else
{
    <h3>
        @VM.Title
    </h3>

    <ul>
        @foreach (var item in VM.Items)
        {
            <li>
                @item.Nome, @item.Idade
                <button type="button" class="btn btn-Danger" @onclick="@( async ()=> await @VM.OnRemover(item))">Deletar</button>
            </li>
        }
    </ul>

    <div>
        <a class="btn btn-success" @onclick="@( async ()=> await @VM.OnNovo())">Nova criança</a>
    </div>
}
