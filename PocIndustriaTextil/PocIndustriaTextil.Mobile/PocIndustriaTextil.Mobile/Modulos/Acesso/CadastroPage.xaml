<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PocIndustriaTextil.Mobile.Modulos.Acesso.CadastroPage">
    <ContentPage.Content>
        <StackLayout 
            Spacing="20"
            VerticalOptions="Center"
            HorizontalOptions="Center">

            <Entry Text="{Binding VM.Usuario.Nome}" Placeholder="Nome"/>
            <Entry Text="{Binding Binding VM.Usuario.Sobrenome}" Placeholder="Sobrenome"/>
            <Entry Text="{Binding Binding VM.Usuario.Login}" Placeholder="Login"/>
            <Entry Text="{Binding Binding VM.Usuario.Senha}" Placeholder="Senha"/>
            <Entry Text="{Binding Binding VM.Usuario.ConfirmarSenha}" Placeholder="Confirmar senha"/>

            <Button Command="{Binding CadastroCommand}"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>