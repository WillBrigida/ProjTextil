<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://xamarin.com/schemas/2014/forms"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="PocIndustriaTextil.Mobile.Modulos.Teste.CriancaPage"
    Title="{Binding Title}">
    
    <ContentPage.Content>
        <StackLayout>
            <Entry Text="{Binding VM.Item.Nome}" Placeholder="Nome"/>
            <Entry Text="{Binding VM.Item.Idade}" Placeholder="Idade"/>

            <Button Text="Salvar criança" Command="{Binding IncluirCommand}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>