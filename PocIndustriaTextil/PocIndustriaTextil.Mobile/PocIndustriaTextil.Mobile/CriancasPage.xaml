<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="PocIndustriaTextil.Mobile.CriancasPage">
    <ContentPage.Content>
        <StackLayout>
            <CollectionView 
                ItemsSource="{Binding Criancas}">
                <CollectionView.ItemTemplate>
                    <DataTemplate>
                        <StackLayout>
                            <Label Text="{Binding Nome}"/>
                        </StackLayout>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>
            <Label Text="teste"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>